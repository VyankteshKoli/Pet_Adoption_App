<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#585859"
                android:elevation="4dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:actionOverflowButtonStyle="@style/Widget.AppCompat.ActionButton.Overflow"
                app:title="Add Pet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/dog" />

            <EditText
                android:id="@+id/etPetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Name"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Breed (e.g. Golden Retriever)"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Age"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetVaccination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vaccinated (Yes/No)"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetSterilization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sterilization (Yes/No)"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Size (Small/Medium/Large)"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/etPetDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Description"
                android:textColor="#000"
                android:textColorHint="#858383"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnSavePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Pet"
                android:layout_marginTop="16dp"
                android:backgroundTint="#009688"
                android:textColor="@android:color/white" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
